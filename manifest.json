{
  "manifest_version": 2,

  "name": "Segment Visual Demo Tagger",
  "description": "An extension to help you visually tag your website",
  "version": "1.0",
  "web_accessible_resources": [
    "src/popup.js",
    "src/hover.css"
  ],
  "browser_action": {
    "default_icon": {
      "19": "images/icon19.png",
      "38": "images/icon38.png"
    },
    "default_popup": "src/popup.html",
    "default_title": "Add Event"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js","src/jquery-3.0.0.min.js"]
    }
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ],
    "persistent": true
  }
}
